{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "outDir": "./dist",
    "baseUrl": "src",
    "lib": ["dom", "dom.iterable", "es6"],
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "incremental": true,
    "jsx": "react-jsx"
  },
  "include": ["client/typescript"],
  "exclude": ["node_modules", "dist"]
}
